# Kubernetes job status
# Usage: kstat <optional job name>

if [ $# -eq 1 ]
  then
    toolforge-jobs show $1
    echo
    kubectl get events --sort-by=.metadata.creationTimestamp | grep --color=never $1
    exit
fi

toolforge-jobs list
echo
kubectl get pods